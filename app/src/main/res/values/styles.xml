<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="mytoast">
        <item name="textBold">true</item>
        <item name="textColor">@color/magicPurple</item>
        <item name="font">@font/montserrat</item>
        <item name="textSize">14sp</item>
        <item name="colorBackground">#fff</item>
        <item name="solidBackground">true</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@color/magicPurple</item>
        <item name="iconStart">@drawable/logo_ready</item>
        <item name="iconEnd">@drawable/logo_ready</item>
        <item name="length">LONG</item> LONG or SHORT
        <item name="gravity">center</item> top or center
        <item name="radius">5dp</item>
    </style>

</resources>
